generator client {
  provider = "prisma-client-js"
  //output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Model 1: Profile (Wajib, relasi ke Supabase Auth)
model Profile {
  // --- Field Lama yang Dipertahankan ---
  id            String    @id @default(uuid()) 
  email         String    @unique
  name          String?
  isSeller      Boolean   @default(false)
  
  // --- Field Baru untuk Desain Profile ---
  username      String?   @unique
  phoneNumber   String?
  shopName      String?
  gender        String?   // Bisa diisi "Male" atau "Female"
  dateOfBirth   DateTime?
  avatarUrl     String?
  updatedAt     DateTime  @updatedAt @default(now())

  // --- Relasi Lama yang Harus Tetap Ada ---
  store         Store?    
  orders        Order[]   
  cart          Cart?     
  wishlist      Wishlist[]
  
  // --- Relasi Messaging ---
  boughtRooms   ChatRoom[] @relation(name: "BuyerRooms")
  soldRooms     ChatRoom[] @relation(name: "SellerRooms")
  sentMessages  Message[]  @relation(name: "SentMessages")
}

// Model 2: Store (Toko/Penjual)
model Store {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  profileId   String    @unique
  profile     Profile   @relation(fields: [profileId], references: [id])
  products    Product[]
}

// Model 3: Product
model Product {
  id          String    @id @default(cuid())
  name        String
  description String
  price       Int       // Gunakan Integer (sen/rupiah terkecil) untuk menghindari error floating point
  imageUrl    String?
  storeId     String
  store       Store     @relation(fields: [storeId], references: [id])
  orderItems  OrderItem[]
  createdAt DateTime @default(now()) 
  updatedAt DateTime @updatedAt
  cartItems   CartItem[] // Relasi balik ke CartItem yang baru dibuat
  wishlistItems Wishlist[]
  stock         Int       @default(0)
  category      String    @default("Food") 
  originalPrice Int?
}

// Model 4 & 5: Order & OrderItem
model Order {
  id            String      @id @default(cuid())
  buyerId       String
  buyer         Profile     @relation(fields: [buyerId], references: [id])
  totalAmount   Int
  status        String      @default("PENDING") // PENDING, PAID, SHIPPED, etc.
  midtransToken String?
  createdAt     DateTime    @default(now())
  items         OrderItem[]
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Int
}

// --- Model Keranjang Belanja Baru ---

model Cart {
  id        String    @id @default(cuid())
  // Menghubungkan keranjang ke Profile pembeli
  buyerId   String    @unique 
  buyer     Profile   @relation(fields: [buyerId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  items     CartItem[]
}

model CartItem {
  id        String   @id @default(cuid())
  cartId    String
  productId String
  quantity  Int      @default(1)
  price     Float    
  cart      Cart     @relation(fields: [cartId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
  @@unique([cartId, productId])
}

// --- Model Messaging Baru ---

model ChatRoom {
  id        String    @id @default(cuid())
  // ID Pembeli (yang memulai/berpartisipasi)
  buyerId   String
  buyer     Profile   @relation(fields: [buyerId], references: [id], name: "BuyerRooms") 
  
  // ID Penjual (Pemilik Toko)
  sellerId  String
  seller    Profile   @relation(fields: [sellerId], references: [id], name: "SellerRooms")

  createdAt DateTime  @default(now())
  messages  Message[] // Relasi ke isi pesan
}

model Message {
  id        String    @id @default(cuid())
  roomId    String
  room      ChatRoom  @relation(fields: [roomId], references: [id])
  
  // ID pengirim (bisa buyerId atau sellerId)
  senderId  String
  sender    Profile   @relation(fields: [senderId], references: [id], name: "SentMessages") 

  content   String
  createdAt DateTime  @default(now())
}
// 3. MODEL WISHLIST BARU (Lebih Simpel)
model Wishlist {
  id        String   @id @default(cuid())
  userId    String
  productId String
  createdAt DateTime @default(now())

  // Relasi
  user      Profile  @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  // Unique constraint (Penting untuk fungsi toggle)
  @@unique([userId, productId])
}